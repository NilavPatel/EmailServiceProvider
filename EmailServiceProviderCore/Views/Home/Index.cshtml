@model EmailServiceProviderCore.Models.MailViewModel
@{
    ViewData["Title"] = "Mail";
}
<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <label for="From">From</label>
            <input asp-for="From" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="To">To</label>
            <input asp-for="To" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="Cc">Cc</label>
            <input asp-for="Cc" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="Bcc">Bcc</label>
            <input asp-for="Bcc" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="Subject">Subject</label>
            <input asp-for="Subject" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="Body">Body</label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="Attachments">Files</label>
            <input type="file" asp-for="Attachments" multiple class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" class="btn btn-primary">
        </div>
    </div>
</form>
